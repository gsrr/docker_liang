version: "3"

volumes:
  db_vol:
  redis_vol:
  media_vol:
  web_data:

services:
  redis:
    image: redis:latest
    command: redis-server /etc/redis/redis.conf
    volumes:
      - redis_vol:/data
      - ./compose/redis/redis.conf:/etc/redis/redis.conf
    ports:
      - "6379:6379"
    restart: always

  db:
    image: postgres
    #env_file:  
      #- ./django_warehouse/.env
    volumes:
      - db_vol:/var/lib/postgresql/data:rw
    ports:
      - "5432:5432"
    restart: always
    environment:
      POSTGRES_DB: yourdbname
      POSTGRES_USER: youruser
      POSTGRES_PASSWORD: yourpassword

  web:
    container_name: web-container
    build: ./web
    volumes:
      - ./django_warehouse:/var/www/html/django_warehouse
      - web_data:/var/www/html/django_warehouse/static
      - media_vol:/var/www/html/django_warehouse/media
      - ./compose/uwsgi:/tmp
    depends_on:
      - db
      - redis
    restart: always

  nginx:
    container_name: nginx-container
    build: ./compose/nginx
    ports:
      - "5050:80"
    volumes:
      - static_vol:/usr/share/nginx/html/static
      - media_vol:/usr/share/nginx/html/media
    depends_on:
      - web
    restart: always
